// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // USER, MODERATOR, ADMIN
  banned        Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  reviews       Review[]
  votes         Vote[]
  reports       Report[]  @relation("Reporter")
  actions       ModerationAction[]
}

model Institution {
  unitid                 String   @id // IPEDS UNITID
  name                   String
  city                   String?
  state                  String?
  control                String?   // PUBLIC, PRIVATE
  sector                 String?
  website                String?
  active                 Boolean   @default(true)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  reviews                Review[]
  offeredMajors          InstitutionMajor[]
}

model Cip6 {
  cip6        String   @id // e.g. 14.0901
  title       String
  definition  String?
  cip2        String
  cip4        String
}

model Major {
  cip4        String   @id // e.g. 14.09
  title       String
  category    String?
  slug        String?   @unique
  description String?
  outcomes    String?  // JSON string: { commonJobs: [], salaryRange: "", gradPaths: [] }
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reviews     Review[]
  institutions InstitutionMajor[]
}

model InstitutionMajor {
  unitid                     String
  cip4                       String
  institution                Institution @relation(fields: [unitid], references: [unitid])
  major                      Major       @relation(fields: [cip4], references: [cip4])
  latestYear                 String?
  completionsTotal           Int        @default(0)

  @@id([unitid, cip4])
}

model Review {
  id                  String   @id @default(cuid())
  cip4                String
  major               Major    @relation(fields: [cip4], references: [cip4])
  unitid              String
  institution         Institution @relation(fields: [unitid], references: [unitid])
  userId              String
  user                User     @relation(fields: [userId], references: [id])
  graduationStatus    String   // graduated, current, switched
  graduationYearRange String?  // e.g., "2018â€“2020"
  ratings             String   // JSON string of ratings
  writtenResponses    String   // JSON string of answers to prompts
  
  status              String   @default("PENDING") // PENDING, APPROVED, REMOVED, REJECTED, SHADOW_HIDDEN
  flagReasons         String?  // JSON array of strings
  riskScore           Int      @default(0)
  toxicityScore       Float?
  lastModeratedAt     DateTime?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  votes               Vote[]
  reports             Report[]
  moderationActions   ModerationAction[]

  @@index([cip4])
  @@index([unitid])
  @@index([userId])
}

model Vote {
  id       String @id @default(cuid())
  reviewId String
  review   Review @relation(fields: [reviewId], references: [id])
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  value    Int    @default(1) // +1

  @@unique([reviewId, userId])
}

model Report {
  id        String   @id @default(cuid())
  reviewId  String
  review    Review   @relation(fields: [reviewId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id], name: "Reporter")
  reason    String
  details   String?
  status    String   @default("OPEN") // OPEN, RESOLVED
  createdAt DateTime @default(now())

  @@index([reviewId])
}

model ModerationAction {
  id              String   @id @default(cuid())
  reviewId        String
  review          Review   @relation(fields: [reviewId], references: [id])
  moderatorId     String
  moderator       User     @relation(fields: [moderatorId], references: [id])
  action          String   // APPROVE, REMOVE, SHADOW_HIDE, REJECT
  notes           String?
  metadata        String?  // JSON string
  createdAt       DateTime @default(now())

  @@index([reviewId])
  @@index([moderatorId])
}
